#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # Combine all directories and subdirectories of project-* into one find command
    selected=$(find ~/ ~/work ~/personal ~/dev ~/production/users/eran/dev \
                $(find ~/production/users/eran/dev -mindepth 1 -maxdepth 1 -type d -name "project-*") \
                -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if [[ -z $TMUX ]] && [[ -z $(pgrep tmux) ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi


tmux switch-client -t $selected_name
